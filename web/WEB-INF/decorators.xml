<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/module/">
    <!-- 先定义不过滤的页面，即排除页面 -->
    <excludes>
        <pattern>/resources/*</pattern>
    </excludes>
    <!-- 定义需要修饰的页面 -->
    <decorator page="phone_tpl.jsp" name="phone">
        <pattern>/phone/*</pattern>
    </decorator>
    <decorator page="cart_tpl.jsp" name="cart">
        <pattern>/cart/*</pattern>
    </decorator>
</decorators>
